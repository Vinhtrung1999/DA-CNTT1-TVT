<script>
    let cartT = JSON.parse(localStorage.getItem('cart')) || []
    let totalCart = document.getElementById('totalCart')
    let qtyCart = document.getElementById('qtyCart')
    if (cartT) {
        qtyCart.innerHTML = cartT.length
        let sum = 0
        cartT.forEach((val) => {
            sum += (val.price * val.qty)
        })
        totalCart.innerHTML = sum + '$'
    }
</script>

