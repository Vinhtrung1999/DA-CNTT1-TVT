<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>
                        <%= dataItem.toyID %>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <form class="form-add-staff" style="font-size: 18px;" action="/admin/updateItem" method="post">
            <input type="hidden" value="<%= dataItem.toyID %>" name="toyID" id="toyID">
            <div class="form-group" id="toyName_area">
                <label for="toyName">Toy name</label>
                <input placeholder="toyName" type="text" class="form-control" name="toyName"
                    value="<%= dataItem.toyName %>">
            </div>
            <div class="form-group" id="typeID_area">
                <label for="typeID">Type</label>
                <br>
                <select name="typeID" id="typeID">
                    <% if(dataItem.typeID==='LXR' ) {%>
                        <option value="LXR">Luxury</option>
                        <option value="PPL">Popular</option>
                        <%}else{%>
                            <option value="PPL">Popular</option>
                            <option value="LXR">Luxury</option>
                            <%}%>
                </select>
            </div>
            <div class="form-group" id="toyDesc_area">
                <label for="descToy">Description</label>
                <textarea placeholder="descToy" type="text" class="form-control" name="descToy" id="descToy" rows="8">
                    <%= dataItem.descToy %>
                </textarea>
            </div>
            <div class="form-group" id="origin_area">
                <label for="origin">original</label>
                <input placeholder="origin" type="text" class="form-control" name="origin" id="origin"
                    value="<%= dataItem.origin %>">
            </div>
            <div class="form-group">
                <label for="qty">Quantity</label>
                <input placeholder="qty" type="number" class="form-control" name="qty" id="qty"
                    value="<%= dataItem.qty %>" disabled>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input placeholder="price" type="number" name="price" class="form-control" id="price"
                    value="<%= dataItem.price %>">
            </div>
            <div class="form-group" id="img1_area">
                <label for="img1">Image</label>
                <input placeholder="img1" name="img1" type="text" class="form-control" id="img1"
                    value="<%= dataItem.img1 %>">
            </div>
            <div class="form-group" id="img1_area">
                <img src="<%= dataItem.img1 %>" alt="img" style="width: 50%; margin: 10px;">
                <button type="submit" class="btn btn-default" id="btn_add_item">update item</button>
            </div>
        </form>
    </div>
</div>