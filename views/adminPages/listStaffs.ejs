<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>List staffs</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="search-area text-center">
            <input type="text" placeholder="search by ID" id="search">
            <button type="button" id="btn_search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </div>
        <div class="row">
            <table class="table table-bordered" style="font-size: 18px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>FULL NAME</th>
                        <th>GENDER</th>
                        <th>POSITION</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% locals.listStaffs.forEach(val=> {%>
                        <tr>
                            <th>
                                <%= val.staffID %>
                            </th>
                            <td>
                                <%= val.staffName %>
                            </td>
                            <td>
                                <%= val.gender %>
                            </td>
                            <td>
                                <%= val.positionName %>
                            </td>
                            <td>
                                <a href="/admin/staffDetails?staffID=<%= val.staffID %>">
                                    <button type="button" class="btn btn-info">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="?pageNow=<%= locals.pageNow - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% for(i=1; i <=locals.countPage; i++){%>
                                <li class="<%= pageNow === i ? 'active': ''%>"><a href="?pageNow=<%= i %>">
                                        <%= i %>
                                    </a></li>
                                <%}%>
                                    <li>
                                        <a href="?pageNow=<%= locals.pageNow + 1 %>" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let btn_search = document.getElementById('btn_search')
    btn_search.addEventListener('click', () => {
        let search = document.getElementById('search').value
        if (search) {
            window.location.href = `/admin/staffDetails?staffID=${search}`
        }
    })
</script>